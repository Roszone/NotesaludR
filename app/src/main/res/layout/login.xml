<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/splash_logo" />

        <ImageView
            android:id="@+id/imgLetters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgLogo"
            android:layout_gravity="center"
            android:background="@drawable/splash_letters" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                card_view:cardBackgroundColor="@color/md_green_400"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="6dp">

                <com.balysv.materialripple.MaterialRippleLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:mrl_rippleDelayClick="true"
                    app:mrl_rippleDimension="10dp"
                    app:mrl_rippleHover="true"
                    app:mrl_rippleOverlay="true">

                    <LinearLayout
                        android:id="@+id/btn_login"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/md_green_400"
                        android:padding="3dp">

                        <com.mikepenz.iconics.view.IconicsImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="6dp"
                            app:iiv_background_color="@android:color/white"
                            app:iiv_color="@color/md_green_400"
                            app:iiv_corner_radius="10dp"
                            app:iiv_icon="gmd_account_box"
                            app:iiv_size="24dp" />

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/md_green_400"
                            android:padding="10dp"
                            android:text="@string/login"
                            android:textAllCaps="true"
                            android:textColor="@color/md_white_1000" />
                    </LinearLayout>
                </com.balysv.materialripple.MaterialRippleLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                card_view:cardBackgroundColor="@color/md_green_400"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="6dp">

                <com.balysv.materialripple.MaterialRippleLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:mrl_rippleDelayClick="true"
                    app:mrl_rippleDimension="10dp"
                    app:mrl_rippleHover="true"
                    app:mrl_rippleOverlay="true">

                    <LinearLayout
                        android:id="@+id/btn_manual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/md_blue_500"
                        android:padding="3dp">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/md_blue_500"
                            android:padding="10dp"
                            android:text="@string/demo"
                            android:textAllCaps="true"
                            android:textColor="@color/md_white_1000" />

                        <com.mikepenz.iconics.view.IconicsImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="6dp"
                            app:iiv_background_color="@color/md_blue_500"
                            app:iiv_color="@android:color/white"
                            app:iiv_corner_radius="10dp"
                            app:iiv_icon="gmd_subscriptions"
                            app:iiv_size="24dp" />
                    </LinearLayout>
                </com.balysv.materialripple.MaterialRippleLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>